# AgentHub Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/agenthub
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agenthub
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_SSL=false

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TYPE=memcached
CACHE_SERVERS=localhost:11211
CACHE_TTL=3600

# ============================================
# API CONFIGURATION
# ============================================
API_BASE_URL=http://localhost:5000
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ============================================
# EXTERNAL SERVICES
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Gmail Configuration (Alternative to SendGrid)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# CLOUD CONFIGURATION
# ============================================
CLOUD_PROVIDER=gcp
CLOUD_REGION=asia-south1
GCP_PROJECT_ID=your-gcp-project-id
PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ============================================
# MICROSERVICES CONFIGURATION
# ============================================
MICROSERVICES_ENABLED=false
SERVICE_REGISTRY_URL=http://localhost:8027

# ============================================
# WIDGET CONFIGURATION
# ============================================
WIDGET_CDN_URL=https://cdn.yourdomain.com
WIDGET_DEFAULT_THEME=modern
WIDGET_POSITION=bottom-right

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12
CORS_CREDENTIALS=true
CORS_OPTIONS_SUCCESS_STATUS=200

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FORMAT=pretty
LOG_FILE=/var/log/agenthub.log

# ============================================
# BUSINESS CONFIGURATION
# ============================================
COMPANY_NAME=AgentHub
SUPPORT_EMAIL=support@yourdomain.com
BUSINESS_BASE_URL=https://yourdomain.com

# Domain Configuration
DOMAIN_MAIN=yourdomain.com
DOMAIN_API=api.yourdomain.com
DOMAIN_CDN=cdn.yourdomain.com
DOMAIN_MEET=meet.yourdomain.com

# ============================================
# DEVELOPMENT SPECIFIC
# ============================================
# Set to true for development mode features
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS=true

# ============================================
# PRODUCTION SPECIFIC
# ============================================
# Uncomment and set for production deployment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# ENABLE_HTTPS=true
# TRUST_PROXY=true
# ============================================
# FRONTEND ENVIRONMENT VARIABLES (VITE_)
# ============================================
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=30000
VITE_WIDGET_CDN_URL=https://cdn.yourdomain.com
VITE_WIDGET_THEME=modern
VITE_COMPANY_NAME=AgentHub
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_BUSINESS_BASE_URL=https://yourdomain.com
VITE_DOMAIN_MAIN=yourdomain.com
VITE_DOMAIN_API=api.yourdomain.com
VITE_DOMAIN_CDN=cdn.yourdomain.com
VITE_DOMAIN_MEET=meet.yourdomain.com
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_RAG=true
VITE_ENABLE_PAYMENTS=true
