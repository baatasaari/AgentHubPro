# Agent Wizard Microservice Environment Configuration
# Copy this file to .env and configure your values

# ==========================================
# STORAGE CONFIGURATION
# ==========================================

# Enable BigQuery storage (false = in-memory storage)
USE_BIGQUERY=false

# ==========================================
# GOOGLE CLOUD CONFIGURATION
# ==========================================

# Google Cloud Project ID (required for BigQuery)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id

# BigQuery Dataset Configuration
BIGQUERY_DATASET_ID=agenthub_dev
BIGQUERY_LOCATION=us-central1

# Table Names (optional, defaults provided)
AGENTS_TABLE_ID=agents
CONVERSATIONS_TABLE_ID=conversations

# ==========================================
# AUTHENTICATION
# ==========================================

# Option 1: Service Account Key File Path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option 2: Base64 Encoded Service Account Key (alternative to file)
# GOOGLE_SERVICE_ACCOUNT_KEY=base64-encoded-service-account-key

# Service Account Email (informational)
GOOGLE_SERVICE_ACCOUNT_EMAIL=agent-wizard-dev@your-project.iam.gserviceaccount.com

# ==========================================
# BIGQUERY QUERY SETTINGS
# ==========================================

# Query timeout in seconds
BIGQUERY_QUERY_TIMEOUT=30

# Maximum number of retries for failed queries
BIGQUERY_MAX_RETRIES=3

# Retry delay in seconds
BIGQUERY_RETRY_DELAY=1

# Enable query logging for debugging
BIGQUERY_ENABLE_LOGGING=true

# ==========================================
# BIGQUERY PERFORMANCE SETTINGS
# ==========================================

# Maximum rows per query result
BIGQUERY_MAX_RESULTS=10000

# Enable query result caching
BIGQUERY_USE_CACHE=true

# Job priority (BATCH or INTERACTIVE)
BIGQUERY_JOB_PRIORITY=INTERACTIVE

# Enable audit logging
BIGQUERY_AUDIT_LOG=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# Create sample data on startup
BIGQUERY_CREATE_SAMPLES=false

# Enable query debugging
BIGQUERY_DEBUG=false

# Dry run mode (validate queries without execution)
BIGQUERY_DRY_RUN=false

# ==========================================
# SERVICE CONFIGURATION
# ==========================================

# Service name for resource naming
SERVICE_NAME=agent-wizard

# Service version
SERVICE_VERSION=1.0.0

# Enable service debug mode
DEBUG=false

# ==========================================
# MONITORING AND LOGGING
# ==========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable performance monitoring
ENABLE_MONITORING=true

# Slow query threshold in seconds
SLOW_QUERY_THRESHOLD=10

# ==========================================
# COST MANAGEMENT
# ==========================================

# Daily cost limit in USD
DAILY_COST_LIMIT=10.00

# Monthly cost limit in USD
MONTHLY_COST_LIMIT=300.00

# ==========================================
# BACKUP AND RETENTION
# ==========================================

# Enable automatic backups
BACKUP_ENABLED=false

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# ==========================================
# EXAMPLE CONFIGURATIONS
# ==========================================

# Example for Development (In-Memory Storage):
# USE_BIGQUERY=false
# ENVIRONMENT=dev
# DEBUG=true

# Example for Staging (BigQuery):
# USE_BIGQUERY=true
# GOOGLE_CLOUD_PROJECT_ID=my-staging-project
# BIGQUERY_DATASET_ID=agenthub_staging
# ENVIRONMENT=staging

# Example for Production (BigQuery):
# USE_BIGQUERY=true
# GOOGLE_CLOUD_PROJECT_ID=my-production-project
# BIGQUERY_DATASET_ID=agenthub_prod
# ENVIRONMENT=prod
# BIGQUERY_AUDIT_LOG=true
# DEBUG=false